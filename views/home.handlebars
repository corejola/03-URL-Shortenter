<h1>URL Link Shortener</h1>

<form action="/shorten" method="post" class="my-3 form-inline">
    <label for="fullUrl" class="sr-only">URL</label>
    <input required placeholder="URL" type="url" name="fullUrl" id="fullUrl" placeholder="URL"
        class="form-control mr-3 col">

    <button type="submit" class="btn btn-success">Shorten</button>

</form>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th> Full URL </th>
            <th>Short URL</th>
        </tr>
    </thead>
    <tbody>
        {{#each urls}}
        <tr>
            <td>
                <a href={{this.longUrl}}>
                    <p>{{this.longUrl}}</p>
                </a>

            </td>
            <td>
                <a href={{this.shortUrl}}>
                    <p>{{this.shortUrl}}</p>
                </a>

            </td>
        </tr>
        {{/each}}
    </tbody>

</table>